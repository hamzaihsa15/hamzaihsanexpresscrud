extends ../layout

block content
    h1 Update Existing Product
    form(action="/products/update/"+product._id,method="post")
        .form-group
            label(for="name") Product Name
            input#name(type="text", class="form-control",name="name", value=product.name)
        .form-group
            label(for="price") Product Price
            input#price(type="text", class="form-control",name="price", value=product.price)
        .form-group
            label(for="color") Product Color
            input#name(type="text", class="form-control",name="color", value=product.color)
        .form-group
            label(for="size") Product Size
            input#name(type="text", class="form-control",name="size", value=product.size)
        input(type="submit", class="btn btn-info")