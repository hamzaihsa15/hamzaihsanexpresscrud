extends layout

block content
  h1 My Shopping Cart
  - var total=0;
    table.table
      thead
        tr
          th Product Name
          th Product Color
          th Product Size
          th Product Price
          th Remove from Cart
      tbody
        each item in cart
          - total +=Number(item.price);
          tr
            td=item.name
            td=item.color
            td=item.size
            td=item.price
            td 
              a(href="/products/cart/remove/"+item._id,class="btn btn-danger") Remove
      tfoot
        tr
            td TOTAL
            td TOTAL
            td TOTAL
            td=total
